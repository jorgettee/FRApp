<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_azure"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="490dp"
        android:layout_height="588dp"
        android:alpha="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/whole_logo" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/previewCard"
        android:layout_width="589dp"
        android:layout_height="419dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:clipChildren="true"
        android:clipToPadding="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#0e63a2"
        app:strokeWidth="2dp">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:scaleType="fillCenter" />

        <com.sd.facultyfacialrecognition.FaceOverlayView
            android:id="@+id/faceOverlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.card.MaterialCardView>

    <!-- STATUS PANEL -->
    <LinearLayout
        android:id="@+id/status_panel"
        android:layout_width="586dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="1dp"
        app:layout_constraintStart_toStartOf="@id/previewCard"
        app:layout_constraintTop_toBottomOf="@id/previewCard">

        <TextView
            android:id="@+id/text_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aoboshi_one"
            android:paddingBottom="3dp"
            android:text="@string/default_status"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_countdown_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aoboshi_one"
            android:paddingBottom="7dp"
            android:text="Scanning for stability..."
            android:textColor="#9E9E9E"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/professor_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="@id/previewCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/previewCard"
        app:layout_constraintTop_toTopOf="@id/previewCard">

        <!-- Header logo -->
        <ImageView
            android:id="@+id/header_logo"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/headerlogo" />

        <!-- Professor picture -->
        <ImageView
            android:id="@+id/professor_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/header_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_account_circle" />

        <!-- Professor status text -->
        <TextView
            android:id="@+id/professor_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/professor_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/aoboshi_one"
            android:text="Professor _____ is in class"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <Button
        android:id="@+id/confirm_yes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:fontFamily="@font/aoboshi_one"
        android:onClick="onConfirmYesClicked"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/status_panel"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/confirm_no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:fontFamily="@font/aoboshi_one"
        android:onClick="onConfirmNoClicked"
        android:visibility="gone"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/status_panel"
        app:layout_constraintStart_toEndOf="@id/confirm_yes_button" />

    <Button
        android:id="@+id/btn_take_break"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a Break"
        android:fontFamily="@font/aoboshi_one"
        android:visibility="gone"
        android:onClick="onTakeBreakClicked"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_yes_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_end_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Class"
        android:fontFamily="@font/aoboshi_one"
        android:visibility="gone"
        android:onClick="onEndClassClicked"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_take_break"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_break_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Break is Done"
        android:fontFamily="@font/aoboshi_one"
        android:onClick="onBreakDoneClicked"
        android:visibility="gone"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_end_class"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
